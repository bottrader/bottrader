{
  "name": "bottrader",
  "version": "0.0.1",
  "description": "Automated generic trading system",
  "main": "server/index.js",
  "homepage": "https://github.com/bottrader/bottrader#readme",
  "author": "Michael Sutherland",
  "license": "AGPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/bottrader/bottrader/issues"
  },
  "scripts": {
    "start": "node build/src/server/index.js",
    "start:inspect": "node --inspect build/src/server/index.js",
    "pretest": "yarn run build",
    "build": "tsc",
    "start:dev": "nodemon build/src/server/index.js",
    "start:debug": "nodemon --inspect build/src/server/index.js",
    "react:dev": "webpack -d -w",
    "hot": "webpack-dev-server --hot --history-api-fallback --open",
    "test:mocha": "./node_modules/.bin/mocha",
    "test": "mocha",
    "coverage": "yarn run build && nyc ./node_modules/.bin/mocha",
    "coverage:1": "yarn run build && ./node_modules/.bin/nyc -a -r ts-node/register -r source-map-support/register --produce-source-map -x 'coverage/**, test/**, build/test/**, build/src/server/models/**, build/src/server/workers/**, src/**, **/*.d.ts, **/*Test.ts' --exclude-after-remap -n 'build/src/**' ./node_modules/.bin/mocha",
    "coverage:report": "./node_modules/.bin/nyc report --reporter text-summary --reporter html && open coverage/index.html",
    "clean": "rm -fr build coverage .nyc_output"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bottrader/bottrader.git"
  },
  "dependencies": {
    "@types/dotenv": "^4.0.2",
    "@types/express": "^4.11.1",
    "@types/react": "^16.0.40",
    "@types/react-dom": "^16.0.4",
    "@types/underscore": "^1.8.8",
    "ajv": "^6.2.1",
    "autobahn": "^17.5.2",
    "axios": "^0.17.1",
    "css-loader": "^0.28.8",
    "dotenv": "^5.0.1",
    "express": "^4.13.4",
    "gdax-trading-toolkit": "^0.3.1",
    "javascript-state-machine": "^3.0.1",
    "moment": "^2.20.1",
    "morgan": "^1.9.0",
    "react": "^0.14.6",
    "react-dom": "^0.14.6",
    "react-redux": "^5.0.6",
    "redux": "^3.7.2",
    "socket.io": "^2.0.4",
    "style-loader": "^0.19.1",
    "talib-binding": "^0.4.0",
    "underscore": "^1.8.3",
    "uuid": "^3.2.1",
    "winston": "^2.4.1",
    "winston-daily-rotate-file": "^3.0.1",
    "ws": "^3.3.3"
  },
  "devDependencies": {
    "@types/chai": "^4.1.2",
    "awesome-typescript-loader": "^4.0.1",
    "babel-core": "^6.0.20",
    "babel-eslint": "^4.1.3",
    "babel-loader": "^6.0.1",
    "babel-preset-es2015": "^6.0.15",
    "babel-preset-react": "^6.0.15",
    "babel-preset-stage-0": "^6.0.15",
    "chai": "^4.1.2",
    "eslint": "^4.18.1",
    "eslint-plugin-react": "^7.7.0",
    "expect.js": "^0.3.1",
    "mocha": "^4.0.1",
    "nyc": "^11.6.0",
    "react-hot-loader": "^1.3.0",
    "redux-devtools": "^3.4.1",
    "source-map-loader": "^0.2.3",
    "source-map-support": "^0.5.4",
    "talib": "^1.0.4",
    "ts-node": "^5.0.1",
    "typescript": "^2.8.1",
    "webpack": "^1.12.2",
    "webpack-dev-middleware": "^1.6.1",
    "webpack-hot-middleware": "^2.10.0"
  }
}
